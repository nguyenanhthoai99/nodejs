<div class='mt-4'>
  <div>
    <h3>Khóa học đã xóa</h3>
    <a href="/me/stored/courses">Đăng sách khóa học</a>
  </div>

  <table class='table mt-4'>
    <thead>
      <tr>
        <th scope='col'>STT</th>
        <th scope='col'>Tên khóa học</th>
        <th scope='col'>Trình độ</th>
        <th scope='col' colspan='2'>Thời gian xóa</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <th scope='row'>{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.level}}</td>
        <td>{{this.deletedAt}}</td>
        <td>
          <a href='' class='btn btn-link btn-restore' data-id="{{ this._id }}">Khôi Phục</a>
          <a href='' class='btn btn-link' data-bs-toggle="modal" data-bs-target="#delete-course-modal"
            data-id="{{this._id}}">Xóa Vĩnh Viễn</a>
        </td>
      </tr>
      {{else}}
      <tr>
        <td class="text-center" colspan="5">Thùng rác trống
          <a href="/me/stored/courses">Danh sách khóa học</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div class="modal fade" id="delete-course-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Hành động này không thể khôi phục. Bạn vẫn muốn xóa?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc chắn muốn xóa khóa học này không?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-course" type="button" class="btn btn-danger">Xóa vĩnh viễn</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

<form hidden method='POST' name="delete-course-form"></form>
<form hidden method='POST' name="restore-course-form"></form>

<script>
  $(document).ready(function () {
    const exampleModal = document.getElementById('delete-course-modal')
    if (exampleModal) {
      let courseId;
      let deleteForm = document.forms['delete-course-form'];
      let restoreForm = document.forms['restore-course-form'];
      let restoreBtn = $('.btn-restore')
      exampleModal.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget
        courseId = button.getAttribute('data-id')
        console.log(courseId)
      })

      var btnDeleteCourse = document.getElementById('btn-delete-course')
      btnDeleteCourse.onclick = function () {
        deleteForm.action = `/courses/${courseId}/force?_method=DELETE`
        deleteForm.submit();
      }

      restoreBtn.click(function (e) {
        e.preventDefault();
        let courseId = $(this).data('id')
        restoreForm.action = `/courses/${courseId}/restore?_method=PATCH`
        restoreForm.submit();
      });

    }
  })
</script>